<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="employee1" class="com.examples.byconstructor.Employee">
	</bean>

	<bean id="employee2" class="com.examples.byconstructor.Employee">
		<constructor-arg value="Employee-1"></constructor-arg>
	</bean>
	
	<bean id="employee3" class="com.examples.byconstructor.Employee">
		<constructor-arg value="1" type="int"></constructor-arg>
	</bean>
	
	<bean id="employee4" class="com.examples.byconstructor.Employee">
		<constructor-arg value="1" type="int"></constructor-arg>
		<constructor-arg value="Employee-1"></constructor-arg>
	</bean>

</beans>